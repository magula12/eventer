<h1>Algorithm Runner</h1>

<p>This page allows you to run the Python script and see the results right here.</p>

<%= form_with url: run_script_algorithm_path, method: :post, local: true do %>
  <%= submit_tag "Run Python Algorithm" %>
<% end %>

<%= notice %>
<%= alert %>
<%= flash[:error] %>
<%= flash[:warning] %>

<% if @output.present? %>
  <h2>Python Script Output</h2>
  <div style="
    background: #f9f9f9;
    border: 1px solid #ccc;
    padding: 15px;
    font-family: monospace;
    white-space: pre-wrap;
    line-height: 1.5em;
    color: #333;
    border-radius: 6px;
    overflow-x: auto;
  ">
    <%= @output.html_safe %>
  </div>
<% end %>
